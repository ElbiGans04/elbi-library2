      // End of Topbar
      // Begin Page Content
      .container-fluid 
        .row.justify-content-between.mb-4
          .col-sm-4
            h3.mb-4.text-gray-800 #{module.ubahHurufPertama(title)}
          .col-sm-8.d-flex.justify-content-end
            button.btn.btn-primary.btn-sm(type="button", data-toggle='modal', data-target='#addModal')
              i(class=buttonAdd)
              span add #{active}
        .card.shadow.mb-4
            .card-header.py-3
                h6.m-0.font-weight-bold.text-primary 
            .card-body
                .table-responsive
                    table#tableUtama.table.table-bordered.display(cellspacing="0", style="width:100%")
                        thead
                            tr
                                th No.
                                each value in coloumn
                                    if(hello(value, without))
                                        th(name=value)=module.ambilKata(value, '_', {space:true, uppercase:true, without: [0]})
                                th Action
                        tfoot
                            tr
                                th No.
                                each value in coloumn
                                    if(hello(value, without))
                                        th(name=value)=module.ambilKata(value, '_', {space:true, uppercase:true, without: [0]})
                                th Action
                        tbody
                          each entri in data
                            tr(data-id=`${entri.dataValues.id}`)
                              td
                              each rows, index in entri.dataValues
                                    if(index == 'book_image') 
                                          td
                                            img.img-thumbnail(src=`data:image/${entri.dataValues.book_type};base64,${rows.toString('base64')}`, alt="rows")
                                    else                              
                                      if(hello(index, without))
                                          td= rows
                                      
                              td(style="text-align: center")
                                button.buttonActionEdit.btn.btn-primary.btn-circle.btn-sm.mr-1(type="button", data-toggle='modal', data-target='#editModal')
                                  i.fas.fa-edit
                                button.buttonActionDelete.btn.btn-danger.btn-circle.btn-sm(type="button", data-toggle='modal', data-target='#deleteModal')
                                  i.fas.fa-trash

                                

                                
            - function hello(value, without) {
            -   for (let e in without) {
            -       if(without[e].toLowerCase() == value.toLowerCase()) {
            -           return false
            -       } 
            -   }
            -   return true
            - }


        
      // /.container-fluid
    // End of Main Content
    // Footer
    footer.sticky-footer.bg-white
      .container.my-auto
        .copyright.text-center.my-auto
          span
            | Copyright &copy; By Elbi 2020 | made with love 
            i.fas.fa-heart
    // End of Footer
  // End of Content Wrapper
// End of Page Wrapper
// Scroll to Top Button
a.scroll-to-top.rounded(href='#page-top')
  i.fas.fa-angle-up
// Logout Modal
#logoutModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
  .modal-dialog(role='document')
    .modal-content
      .modal-header
        h5#exampleModalLabel.modal-title Ready to Leave?
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') &times;
      .modal-body
        | Select &quot;Logout&quot; below if you are ready to end your current session.
      .modal-footer
        button.btn.btn-secondary(type='button', data-dismiss='modal')
          | Cancel
        a.btn.btn-primary(href='login.html') Logout
// Modal Multiguna
#deleteModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='alert', aria-hidden='true')
  .modal-dialog(role='document')
    .modal-content
      .modal-header
        h5#multigunaHeader.modal-title Delete
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') &times;
      .modal-body Please select a row first 
      .modal-footer
        button#deleteButton.btn.btn-danger(type='button', aria-label='delete button') Delete
// Modal Multiguna
#addModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='alert', aria-hidden='true')
  .modal-dialog(role='document')
    .modal-content
      .modal-header
        h5#multigunaHeader.modal-title Add
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') &times;
      .modal-body 
        form(action="")
          each value in coloumn
            if(hello(value, without))
              .form-group
                -let value2 = module.ambilKata(value, '_', {uppercase: true, without: [0]})
                - let type = 'text';
                if(module.jajal(as, value))
                  - type='file'
                label(for=`inputAdd${value2}`)=value2
                input.form-control(id=`inputAdd${value2}`, type=type, aria-describedby=`${value2}Help`, placeholder=`Enter ${value2}` name=`${value}` autocomplate=`off`)
          
      .modal-footer
        button.btn.btn-secondary(type='button', data-dismiss='modal', aria-label='Close') Close
        button#addButton.btn.btn-primary(type='button', aria-label='add button') Add
// Modal Multiguna
#editModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='alert', aria-hidden='true')
  .modal-dialog(role='document')
    .modal-content
      .modal-header
        h5#multigunaHeader.modal-title Edit
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') &times;
      .modal-body 
        form(action="")
          each value in coloumn
            if(hello(value, without))
              .form-group
                -let value2 = module.ambilKata(value, '_', {uppercase: true, without: [0]})
                - let type = 'text';
                if(module.jajal(as, value))
                  img.img-thumbnail.d-block(src="", alt="")
                  - type='file'
                label(for=`inputEdit${value2}`)=value2
                input.form-control(id=`inputEdit${value2}`, type=type, aria-describedby=`${value2}Help`, placeholder=`Enter ${value2}` name=`${value}` autocomplate=`off`)
          
      .modal-footer
        button.btn.btn-secondary(type='button', data-dismiss='modal', aria-label='Close') Close
        button#EditButton.btn.btn-primary(type='button', aria-label='Edit button') Edit

