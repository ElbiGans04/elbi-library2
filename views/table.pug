    // Divider
    hr.sidebar-divider.my-0
    // Nav Item - Dashboard
    li.nav-item(name="dashboard")
      a.nav-link(href='/')
        i.fas.fa-fw.fa-tachometer-alt
        span.ml-1 Dashboard
    // Divider
    hr.sidebar-divider
    // Heading
    .sidebar-heading Data
    li.nav-item(name="member")
      a.nav-link(href='/members')
        i.fas.fa-users
